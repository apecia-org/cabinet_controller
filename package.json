{
  "name": "cabinet-api",
  "version": "1.0.0",
  "description": "Cabinet control REST API service",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:manual": "node tests/manual/test-api.js"
  },
  "keywords": ["cabinet", "api", "rest", "serial-port"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "serialport": "^13.0.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
